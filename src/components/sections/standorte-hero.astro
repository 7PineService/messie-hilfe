---
import { Image } from 'astro:assets';
import heroStandorte from '@/assets/images/hero-standorte.png';
---

<section class="hero-with-bg flex items-center py-8 md:py-10 lg:py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Small centered illustration -->
      <div class="flex justify-center mb-4 md:mb-5 lg:mb-6">
        <Image
          src={heroStandorte}
          alt="Unsere Einsatzgebiete"
          loading="eager"
          class="w-32 h-32 md:w-36 md:h-36 lg:w-40 lg:h-40"
        />
      </div>

      <!-- H1 Heading -->
      <h1 class="text-xl md:text-3xl lg:text-3xl xl:text-4xl 2xl:text-5xl min-[1920px]:text-6xl font-bold text-primary leading-tight mb-4">
        Unsere Einsatzgebiete
      </h1>

      <!-- Subline -->
      <p class="text-sm md:text-base lg:text-base xl:text-lg 2xl:text-xl min-[1920px]:text-2xl text-primary opacity-80 leading-relaxed max-w-2xl mx-auto">
        Wir sind bundesweit tätig.<br />
        In ausgewählten Städten regelmäßig – in anderen Regionen nach Anfrage.
      </p>
    </div>
  </div>
</section>

<style>
  .hero-with-bg {
    background: url('/images/background.webp') center / cover no-repeat, var(--color-surface-primary);
  }
</style>
