---
import { CTABlock, WhoCard } from '@/components/sections'
import whoImg1 from '@/assets/images/section-who-1.png'
import whoImg2 from '@/assets/images/section-who-2.png'
import whoImg3 from '@/assets/images/section-who-3.png'
import whoImg4 from '@/assets/images/section-who-4.png'

const whoList = [
  {
    title: 'Betroffene selbst',
    description: [
      'Wenn die Situation über den Kopf wächst',
      'Anonyme Hilfe ohne Bewertung',
    ],
    image: whoImg1,
  },
  {
    title: 'Angehörige',
    description: [
      'Wenn Sie sich um einen Angehörigen sorgen',
      'Diskrete, professionelle Unterstützung',
    ],
    image: whoImg2,
  },
  {
    title: 'Vermieter & Eigentümer',
    description: [
      'Nach Auszug, Kündigung oder Räumung',
      'Schnelle Hilfe auch bei extremen Zuständen',
    ],
    image: whoImg3,
  },
  {
    title: 'Behörden & Betreuer',
    description: [
      'Bei betreuten oder behördlichen Fällen',
      'Verlässliche Zusammenarbeit mit Sozialdiensten',
    ],
    image: whoImg4,
  },
]
---

<section
  id="who-section"
  class="section-bg flex items-center py-8 md:py-10 lg:py-12"
>
  <div class="container relative mx-auto px-4 w-full">
    <div class="max-w-[90%] lg:max-w-[60%] mx-auto text-center relative z-10">
      <h2
        class="text-xl md:text-3xl lg:text-3xl xl:text-4xl 2xl:text-5xl min-[1920px]:text-6xl font-bold leading-tight"
      >
        Für wen ist unsere Messie-Hilfe geeignet?
      </h2>

      <div
        class="mt-4 text-sm md:text-base lg:text-base xl:text-lg 2xl:text-xl min-[1920px]:text-2xl opacity-80 leading-relaxed"
      >
        <h3>Erkennen Sie sich oder Ihre Situation hier wieder?</h3>
      </div>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2 md:gap-4 mt-8 lg:mt-12"
    >
      {
        whoList.map((w) => (
          <WhoCard
            title={w.title}
            description={w.description}
            image={w.image}
          />
        ))
      }
    </div>

    <CTABlock />
  </div>

  <style>
    .section-bg {
      background:
        url('/images/background.webp') left 80% / cover no-repeat,
        var(--color-surface-primary);
      position: relative;
    }

    .title-bg {
      filter: drop-shadow(2px 16px 20px #aa600e);
      /* background-image: radial-gradient(
      circle,
      var(--color-surface-muted),
      var(--color-surface-tertiary),
      #fbf0ea83,
      #fbf2ed41,
      #fcf4f000
    ); */
    }

    .check-wrapper {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 1rem;
      height: 1rem;
      border-radius: 50%;
      background-color: var(--color-surface-warm-peach);
      color: var(--color-accent-bronze);
    }

    @media (min-width: 768px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1024px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1280px) {
      .check-wrapper {
        width: 1.5rem;
        height: 1.5rem;
      }
    }

    @media (min-width: 1920px) {
      .check-wrapper {
        width: 1.75rem;
        height: 1.75rem;
      }
    }

    .section-image::after {
      content: '';
      inset: -8rem;
      bottom: -16%;
      position: absolute;
      background: url('/images/section-start.webp') center / contain no-repeat;
    }

    @media (max-width: 1023px) {
      .section-bg {
        background:
          url('/images/background.webp') left / cover no-repeat,
          var(--color-surface-primary);
      }

      .section-image::after {
        inset: -3rem;
        right: -1rem;
        top: -50%;
      }
    }

    @media (min-width: 1024px) and (orientation: landscape) {
      #who-section {
        min-height: calc(100vh - 7rem);
      }
    }

    @media (max-width: 1023px), (orientation: portrait) {
      #who-section {
        min-height: auto;
      }
    }

    @media (max-width: 768px) and (orientation: portrait) {
      .section-image::after {
        inset: -3rem;
        top: -50%;
      }
    }

    @media (max-height: 600px) and (orientation: landscape) {
      #who-section {
        min-height: auto;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const setStartSectionHeight = () => {
        const header = document.getElementById('main-header')
        const startSection = document.getElementById('who-section')

        if (!header || !startSection) return

        const isLandscape = window.matchMedia(
          '(orientation: landscape)'
        ).matches
        const isDesktop = window.innerWidth >= 1024
        const isTallEnough = window.innerHeight >= 600

        if (isDesktop && isLandscape && isTallEnough) {
          const headerHeight = header.offsetHeight
          startSection.style.minHeight = `calc(100vh - ${headerHeight}px)`
        } else {
          startSection.style.minHeight = 'auto'
        }
      }

      setStartSectionHeight()

      window.addEventListener('resize', setStartSectionHeight)
      window.addEventListener('orientationchange', () => {
        setTimeout(setStartSectionHeight, 100)
      })
    })
  </script>
</section>
