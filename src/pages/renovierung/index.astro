import startImg from '@/assets/images/section-start-renovierung.png';

const title = 'Renovierung – strukturiert, zuverlässig & planbar';
const description = 'Professionelle Renovierung – strukturiert, zuverlässig und planbar. Wir übernehmen Renovierungsarbeiten für Wohnungen, Häuser und ausgewählte Gewerbeflächen. Jetzt unverbindlich anfragen.';
const canonicalUrl = `${SITE_URL}/renovierung/`;

const heroProps = {
  title: 'Renovierung – strukturiert, zuverlässig & planbar',
  description: [
    'Eine Renovierung schafft neue Nutzbarkeit und ein gepflegtes Gesamtbild.',
    'Wir übernehmen Renovierungsarbeiten zuverlässig, koordiniert und mit transparentem Festpreis – für Wohnungen, Häuser und ausgewählte Gewerbeflächen.'
  ],
  usps: [
    'Strukturierter Ablauf & klare Absprachen',
    'Transparenter Festpreis',
    'Zuverlässige Terminplanung',
    'Kostenlose Vor-Ort-Besichtigung'
  ]
};

const startProps = {
  heading: 'So unterstützen wir bei einer Renovierung',
  subtitle: 'Renovierungsarbeiten erfordern Planung, Koordination und einen klaren Ablauf. Wir sorgen dafür, dass notwendige Arbeiten strukturiert umgesetzt werden – übersichtlich, planbar und ohne unnötige Komplexität.',
  bulletPoints: [
    '<strong>Strukturiert</strong> & koordiniert',
    '<strong>Zuverlässig</strong> & planbar',
    '<strong>Transparent</strong> & nachvollziehbar',
    'Ziel: nutzbare, <strong>gepflegte Räume</strong>'
  ],
  closingText: 'Ob einzelne Renovierungsmaßnahmen oder kleinere Komplettarbeiten – wir stimmen Umfang und Ablauf individuell mit Ihnen ab und sorgen für eine saubere Umsetzung.',
  image: startImg
};

const stepsData = [
  {
    title: 'Unverbindlich anfragen',
    description: 'Schildern Sie uns Ihr Renovierungsvorhaben telefonisch, per E-Mail oder über das Online-Formular.',
    subDescription: 'Die Anfrage ist unverbindlich. Wir klären erste Fragen und besprechen das weitere Vorgehen in Ruhe.',
    image: stepsImg1,
  },
  {
    title: 'Besichtigung & Planung',
    description: 'Wir verschaffen uns vor Ort einen Überblick über Umfang, Zustand und notwendige Maßnahmen.',
    subDescription: 'Die Besichtigung dient der realistischen Planung – transparent und ohne Verpflichtung.',
    image: stepsImg2,
  },
  {
    title: 'Transparentes Angebot',
    description: 'Sie erhalten ein verbindliches Festpreis-Angebot für die Renovierungsarbeiten.',
    subDescription: 'Alle vereinbarten Leistungen sind klar definiert – ohne versteckte Kosten.',
    image: stepsImg3,
  },
  {
    title: 'Fachgerechte Umsetzung',
    description: 'Zum vereinbarten Termin führen unsere Teams die Renovierung planmäßig durch.',
    subDescription: 'Strukturiert, koordiniert und zuverlässig – mit einem klaren Ergebnis.',
    image: stepsImg4,
  },
];

const stepsProps = {
  heading: 'So läuft eine Renovierung bei uns ab',
  subtitle: 'In vier klaren Schritten sorgen wir für eine planbare und zuverlässige Renovierung.',
  ctaText: 'Unverbindlich anfragen – wir erklären Ihnen den Ablauf',
  steps: stepsData
};

const includedProps = {
  heading: 'Was ist bei einer Renovierung enthalten – und was nicht',
  subtitle: 'Klare Abgrenzung sorgt für Planungssicherheit und <strong>Transparenz</strong>.',
  includedTitle: 'In der Renovierung enthalten',
  includedItems: [
    'Vereinbarte <strong>Renovierungsarbeiten</strong>',
    '<strong>Koordination</strong> der einzelnen Arbeitsschritte',
    'Einsatz geeigneter <strong>Materialien</strong> (nach Absprache)',
    '<strong>Strukturierter</strong> Ablauf',
    '<strong>Transparenter</strong> Festpreis',
    '<strong>Individuelle</strong> Anpassung an den Umfang'
  ],
  includedFooter: 'Gern klären wir vorab, welche Renovierungsmaßnahmen in Ihrem Fall sinnvoll sind.',
  notIncludedTitle: 'Nicht enthalten',
  notIncludedTitleSuffix: 'bzw. separat buchbar',
  notIncludedItems: [
    'Umfangreiche <strong>Sanierungsarbeiten</strong>',
    '<strong>Statik-, Elektro-</strong> oder <strong>Sanitärarbeiten</strong>',
    '<strong>Reinigungs-</strong> oder <strong>Entrümpelungsleistungen</strong>',
    'Arbeiten außerhalb des vereinbarten Leistungsumfangs'
  ],
  notIncludedFooter: 'Leistungen außerhalb dieses Rahmens stimmen wir transparent mit Ihnen ab.',
  ctaText: 'Klären Sie vorab, welche Renovierungsarbeiten sinnvoll sind'
};

const transparencyProps = {
  heading: 'Kosten & Transparenz – fair, nachvollziehbar und planbar',
  subtitle: 'Die Kosten einer Renovierung hängen vom Umfang, Zustand und den gewünschten Maßnahmen ab. Deshalb setzen wir auf eine realistische Einschätzung und transparente Angebote statt pauschaler Preisangaben.',
  bulletPoints: [
    'Preis richtet sich nach Umfang und Aufwand',
    'Kostenlose Besichtigung zur realistischen Planung',
    'Verbindliches Festpreis-Angebot',
    'Angebot unverbindlich – Sie entscheiden in Ruhe'
  ],
  rightText: 'Uns ist wichtig, dass Sie von Anfang an wissen, womit Sie rechnen können. Klare Absprachen, transparente Angebote und ein strukturierter Ablauf stehen bei uns im Vordergrund.',
  ctaText: 'Renovierung realistisch einschätzen lassen'
};

const faqData = [
  {
    title: 'Welche Renovierungsarbeiten übernehmen Sie?',
    description: 'Wir übernehmen ausgewählte Renovierungsarbeiten nach vorheriger Abstimmung.',
    image: faqImg1,
  },
  {
    title: 'Muss ich während der Renovierung anwesend sein?',
    description: 'Nein. Auf Wunsch führen wir die Arbeiten selbstständig durch.',
    image: faqImg2,
  },
  {
    title: 'Wie lange dauert eine Renovierung?',
    description: 'Das hängt vom Umfang ab. Kleinere Renovierungen können oft kurzfristig umgesetzt werden.',
    image: faqImg3,
  },
  {
    title: 'Wie wird der Aufwand eingeschätzt?',
    description: 'Im Rahmen einer kostenlosen Besichtigung oder detaillierten Planung.',
    image: faqImg4,
  },
  {
    title: 'Gibt es feste Preise für Renovierungen?',
    description: 'Sie erhalten vorab ein verbindliches Festpreis-Angebot.',
    image: faqImg5,
  },
  {
    title: 'Wer koordiniert die Arbeiten?',
    description: 'Wir übernehmen die Koordination der vereinbarten Maßnahmen.',
    image: faqImg6,
  },
];

const faqProps = {
  heading: 'Häufige Fragen zur Renovierung',
  subtitle: 'Hier finden Sie Antworten auf häufige Fragen rund um Renovierungsarbeiten.',
  faqItems: faqData,
  ctaText: 'Ihre Frage ist noch offen?'
};
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <main>
    <Hero {...heroProps} />
    <Start {...startProps} />
    <Steps {...stepsProps} />
    <Included {...includedProps} />
    <Transparency {...transparencyProps} />
    <FAQ {...faqProps} />
    <FinalCTA />
  </main>

  <AnonymFormOverlay />
  <FloatingActionIcons />
</BaseLayout>
