---
import { SectionCTA, WhyCard } from '@/components/common'
import type { ImageMetadata } from 'astro'
import whyImg1 from '@/assets/images/section-why-1.png'
import whyImg2 from '@/assets/images/section-why-2.png'
import whyImg3 from '@/assets/images/section-why-3.png'
import whyImg4 from '@/assets/images/section-why-4.png'

interface Props {
  heading?: string;
  subtitle?: string;
  showCTA?: boolean;
  ctaText?: string;
  items?: Array<{
    title: string;
    description: string[];
    image: ImageMetadata;
  }>;
}

const defaultReasons = [
  {
    title: '20+ Jahre Erfahrung',
    description: [
      'Tausende Einsätze, auch in schwierigen Fällen',
      'Langjährige Erfahrung mit sensiblen Situationen',
    ],
    image: whyImg1,
  },
  {
    title: 'Absolute Diskretion',
    description: [
      'Neutrale Fahrzeuge ohne Kennzeichnung',
      'Keine Weitergabe von Daten oder Informationen',
    ],
    image: whyImg2,
  },
  {
    title: 'Fair & Transparent',
    description: [
      'Festpreis ohne Nachforderungen',
      'Schriftliches Angebot im Voraus',
    ],
    image: whyImg3,
  },
  {
    title: 'Respektvoller Umgang',
    description: [
      'Keine Bewertung oder Druck',
      'Empathie, Verständnis und Ruhe',
    ],
    image: whyImg4,
  },
]

const {
  heading = "Warum unsere Messie-Hilfe Vertrauen schafft",
  subtitle = "Diskrete, respektvolle und faire Hilfe bei Messie-Wohnungen. Erfahren, sensibel und verlässlich – das wissen unsere Kunden an uns zu schätzen.",
  showCTA = true,
  ctaText = "Vertrauen entsteht, wenn man respektvoll, transparent und fair behandelt wird.",
  items = defaultReasons
} = Astro.props;
---

<section
  id="why-section"
  class="section-bg flex items-center pt-4 pb-8 md:py-10 lg:py-12"
>
  <div class="container relative mx-auto px-4 w-full">
    <div class="max-w-[90%] mx-auto text-center relative z-10">
      <h2
        class="text-xl md:text-3xl lg:text-3xl xl:text-4xl 2xl:text-5xl min-[1920px]:text-6xl font-bold leading-tight"
      >
        {heading}
      </h2>

      <div
        class="mt-4 text-sm md:text-base lg:text-base xl:text-lg 2xl:text-xl min-[1920px]:text-2xl opacity-80 leading-relaxed"
      >
        <h3>
          {subtitle}
        </h3>
      </div>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-2 md:gap-4 mt-8 lg:mt-12">
      {
        items.map((item) => (
          <WhyCard
            title={item.title}
            description={item.description}
            image={item.image}
          />
        ))
      }
    </div>

    {showCTA && <SectionCTA topText={ctaText} />}
  </div>

  <style>
    .section-bg {
      background:
        url('/images/background.webp') left 80% / cover no-repeat,
        var(--color-surface-primary);
      position: relative;
    }

    .check-wrapper {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 1rem;
      height: 1rem;
      border-radius: 50%;
      background-color: var(--color-surface-warm-peach);
      color: var(--color-accent-bronze);
    }

    @media (min-width: 768px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1024px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1280px) {
      .check-wrapper {
        width: 1.5rem;
        height: 1.5rem;
      }
    }

    @media (min-width: 1920px) {
      .check-wrapper {
        width: 1.75rem;
        height: 1.75rem;
      }
    }

    .section-image::after {
      content: '';
      inset: -8rem;
      bottom: -16%;
      position: absolute;
      background: url('/images/section-start.webp') center / contain no-repeat;
    }

    @media (max-width: 1023px) {
      .section-bg {
        background:
          url('/images/background.webp') left / cover no-repeat,
          var(--color-surface-primary);
      }

      .section-image::after {
        inset: -3rem;
        right: -1rem;
        top: -50%;
      }
    }

    @media (min-width: 1024px) and (orientation: landscape) {
      #why-section {
        min-height: calc(100vh - 7rem);
      }
    }

    @media (max-width: 1023px), (orientation: portrait) {
      #why-section {
        min-height: auto;
      }
    }

    @media (max-width: 768px) and (orientation: portrait) {
      .section-image::after {
        inset: -3rem;
        top: -50%;
      }
    }

    @media (max-height: 600px) and (orientation: landscape) {
      #why-section {
        min-height: auto;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const setStartSectionHeight = () => {
        const header = document.getElementById('main-header')
        const startSection = document.getElementById('why-section')

        if (!header || !startSection) return

        const isLandscape = window.matchMedia(
          '(orientation: landscape)'
        ).matches
        const isDesktop = window.innerWidth >= 1024
        const isTallEnough = window.innerHeight >= 600

        if (isDesktop && isLandscape && isTallEnough) {
          const headerHeight = header.offsetHeight
          startSection.style.minHeight = `calc(100vh - ${headerHeight}px)`
        } else {
          startSection.style.minHeight = 'auto'
        }
      }

      setStartSectionHeight()

      window.addEventListener('resize', setStartSectionHeight)
      window.addEventListener('orientationchange', () => {
        setTimeout(setStartSectionHeight, 100)
      })
    })
  </script>
</section>
