const transparencyProps = {
  heading: 'Kosten & Transparenz – fair, nachvollziehbar und planbar',
  subtitle: 'Die Kosten einer Entrümpelung lassen sich nicht pauschal festlegen. Größe, Menge und Zugänglichkeit spielen eine entscheidende Rolle – deshalb setzen wir auf eine realistische Einschätzung und klare Angebote.',
  bulletPoints: [
    'Der Preis richtet sich nach dem tatsächlichen Aufwand',
    'Kostenlose Besichtigung zur realistischen Einschätzung',
    'Verbindliches Festpreis-Angebot vor Beginn',
    'Angebot unverbindlich – Sie entscheiden in Ruhe'
  ],
  rightText: 'Uns ist wichtig, dass Sie von Anfang an wissen, womit Sie rechnen können. Transparenz, Fairness und klare Absprachen stehen bei uns an erster Stelle – ohne nachträgliche Überraschungen.',
  ctaText: 'Kosten realistisch einschätzen lassen'
};

const faqData = [
  {
    title: 'Ist eine Teil-Entrümpelung möglich?',
    description: 'Ja. Wir entrümpeln auch einzelne Räume, Keller oder Garagen – ganz nach Ihrem Bedarf.',
    image: faqImg1,
  },
  {
    title: 'Muss ich während der Entrümpelung anwesend sein?',
    description: 'Nein. Auf Wunsch führen wir die Entrümpelung selbstständig durch und halten Sie auf dem Laufenden.',
    image: faqImg2,
  },
  {
    title: 'Wie schnell kann eine Entrümpelung durchgeführt werden?',
    description: 'Je nach Umfang oft kurzfristig. Kleinere Entrümpelungen sind häufig innerhalb eines Tages erledigt.',
    image: faqImg3,
  },
  {
    title: 'Wie wird der Aufwand eingeschätzt?',
    description: 'Im Rahmen einer kostenlosen Besichtigung oder detaillierten Vorabklärung.',
    image: faqImg4,
  },
  {
    title: 'Gibt es feste Preise für eine Entrümpelung?',
    description: 'Sie erhalten vorab ein verbindliches Festpreis-Angebot – ohne versteckte Kosten.',
    image: faqImg5,
  },
  {
    title: 'Was passiert mit dem entrümpelten Inhalt?',
    description: 'Abtransport und Entsorgung erfolgen gemäß der vorherigen Absprache.',
    image: faqImg6,
  },
];

const faqProps = {
  heading: 'Häufige Fragen zur Entrümpelung',
  subtitle: 'Hier finden Sie Antworten auf die wichtigsten Fragen rund um eine professionelle Entrümpelung.',
  faqItems: faqData,
  ctaText: 'Ihre Frage ist noch offen?'
};
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <main>
    <Hero {...heroProps} />
    <Start {...startProps} />
    <Steps {...stepsProps} />
    <Included {...includedProps} />
    <Transparency {...transparencyProps} />
    <FAQ {...faqProps} />
    <FinalCTA />
  </main>

  <AnonymFormOverlay />
  <FloatingActionIcons />
</BaseLayout>
