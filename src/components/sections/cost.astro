---
import { SectionCTA, CostCard } from '@/components/common'
import costImg1 from '@/assets/images/section-cost-1.png'
import costImg2 from '@/assets/images/section-cost-2.png'
import costImg3 from '@/assets/images/section-cost-3.png'
import costImg4 from '@/assets/images/section-cost-4.png'

const featuredCard = {
  title: '100 % Festpreis-Garantie',
  description: [
    'Keine versteckten Kosten.',
    'Verbindlicher Festpreis nach Besichtigung.',
    'Festpreis-Vereinbarung vor Ort - schriftliches Angebot inklusive.',
  ],
  leftImage: costImg1,
  rightImage: costImg2,
}

const standardCards = [
  {
    title: 'Individueller Festpreis statt Schätzung',
    description: [
      'Jede Messie-Wohnung ist anders',
      'Festpreis erst nach kostenloser Vor-Ort-Besichtigung',
      'Individuelle Kalkulation statt pauschaler Annahmen'
    ],
    image: costImg3,
  },
  {
    title: 'Wovon hängen die Kosten ab?',
    description: [
      'Größe, Zustand und Zugänglichkeit',
      'Art und Menge der Gegenstände',
      'Mögliche Zusatzleistungen (z. B. Desinfektion, Renovierung)'
    ],
    image: costImg4,
  },
]
---

<section
  id="cost-section"
  class="section-bg flex items-center py-8 md:py-10 lg:py-12"
>
  <div class="container relative mx-auto px-4 w-full">
    <div class="max-w-[90%] mx-auto text-center relative z-10">
      <h2
        class="text-xl md:text-3xl lg:text-3xl xl:text-4xl 2xl:text-5xl min-[1920px]:text-6xl font-bold leading-tight"
      >
        Was kostet eine Messie-Entrümpelung und Reinigung?
      </h2>

      <div
        class="mt-4 text-sm md:text-base lg:text-base xl:text-lg 2xl:text-xl min-[1920px]:text-2xl opacity-80 leading-relaxed"
      >
        <h3>Transparent, fair und ohne Überraschungen – wir erklären Ihnen, wie sich die Kosten zusammensetzen.</h3>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 auto-rows-fr gap-2 md:gap-4 mt-8 lg:mt-12">
      <CostCard
        variant="featured"
        title={featuredCard.title}
        description={featuredCard.description}
        leftImage={featuredCard.leftImage}
        rightImage={featuredCard.rightImage}
        classes="col-span-1 lg:col-span-2"
      />
      {
        standardCards.map((card) => (
          <CostCard
            variant="standard"
            title={card.title}
            description={card.description}
            image={card.image}
          />
        ))
      }
    </div>

    <SectionCTA topText="Transparente Kosten, klare Abläufe – ohne Überraschungen." />
  </div>

  <style>
    .section-bg {
      background:
        url('/images/background.webp') left 80% / cover no-repeat,
        var(--color-surface-primary);
      position: relative;
    }

    .check-wrapper {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 1rem;
      height: 1rem;
      border-radius: 50%;
      background-color: var(--color-surface-warm-peach);
      color: var(--color-accent-bronze);
    }

    @media (min-width: 768px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1024px) {
      .check-wrapper {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    @media (min-width: 1280px) {
      .check-wrapper {
        width: 1.5rem;
        height: 1.5rem;
      }
    }

    @media (min-width: 1920px) {
      .check-wrapper {
        width: 1.75rem;
        height: 1.75rem;
      }
    }

    .section-image::after {
      content: '';
      inset: -8rem;
      bottom: -16%;
      position: absolute;
      background: url('/images/section-start.webp') center / contain no-repeat;
    }

    @media (max-width: 1023px) {
      .section-bg {
        background:
          url('/images/background.webp') left / cover no-repeat,
          var(--color-surface-primary);
      }

      .section-image::after {
        inset: -3rem;
        right: -1rem;
        top: -50%;
      }
    }

    @media (min-width: 1024px) and (orientation: landscape) {
      #cost-section {
        min-height: calc(100vh - 7rem);
      }
    }

    @media (max-width: 1023px), (orientation: portrait) {
      #cost-section {
        min-height: auto;
      }
    }

    @media (max-width: 768px) and (orientation: portrait) {
      .section-image::after {
        inset: -3rem;
        top: -50%;
      }
    }

    @media (max-height: 600px) and (orientation: landscape) {
      #cost-section {
        min-height: auto;
      }
    }
  </style>
</section>
