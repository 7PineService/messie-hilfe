---
import ContactForm from '@/components/contact-form.astro';
import { getEntry } from 'astro:content';

const onlineInquiry = await getEntry('online-inquiry', 'index');
const { title, content, buttonText } = onlineInquiry?.data || {};
---

<section class="py-12 md:py-16 lg:py-20 bg-surface-secondary">
	<div class="container mx-auto px-4">
		<div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
			<!-- Left Column: Contact Form -->
			<div>
				<ContactForm />
			</div>

			<!-- Right Column: Text Content -->
			<div class="space-y-6">
				<h2 class="text-3xl md:text-4xl font-bold">
					{title}
				</h2>
				<p class="text-lg opacity-90 leading-relaxed">
					{content}
				</p>
				<a href="#anfrage" class="cta-secondary inline-flex items-center gap-2 text-base border border-cta-border rounded-xl px-8 py-4">
					{buttonText}
				</a>
			</div>
		</div>
	</div>
</section>
