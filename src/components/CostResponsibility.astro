---
import { getEntry } from 'astro:content';

const costContent = await getEntry('cost-responsibility', 'index');
const { title, content } = costContent.data;
---

<section class="py-12 md:py-16 lg:py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="max-w-4xl mx-auto">
			<h2 class="text-3xl md:text-4xl font-bold text-[var(--color-heading)] mb-8 text-center">
				{title}
			</h2>
			<div class="prose prose-lg max-w-none">
				<p class="text-lg text-[var(--color-heading)] opacity-90 leading-relaxed text-center">
					{content}
				</p>
			</div>
		</div>
	</div>
</section>
