---
import { cn } from '@/utils/cn';

interface Props {
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  fullWidth = false,
  class: className = '',
  ...rest
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed';

const variantClasses = {
  primary: 'cta-primary text-white',
  secondary: 'cta-secondary text-primary border border-cta-border'
};

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-5 py-3 text-lg'
};

const widthClass = fullWidth ? 'w-full' : '';

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  type={!href ? type : undefined}
  disabled={!href && disabled}
  class={cn(baseClasses, variantClasses[variant], sizeClasses[size], widthClass, className)}
  {...rest}
>
  <slot />
</Element>
