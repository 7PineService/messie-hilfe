---
import BaseLayout from '@/layouts/base-layout.astro';
import { FinalCTA, Why, Steps } from '@/components/sections';
import TextImageHero from '@/components/sections/text-image-hero.astro';
import Experience from '@/components/sections/experience.astro';
import { SITE_URL } from '@/config/site';
import whyImage1 from '@/assets/images/section-why-1.png';
import whyImage2 from '@/assets/images/section-why-2.png';
import whyImage3 from '@/assets/images/section-why-3.png';
import whyImage4 from '@/assets/images/section-why-4.png';
import stepsImage1 from '@/assets/images/section-steps-1.png';
import stepsImage2 from '@/assets/images/section-steps-2.png';
import stepsImage3 from '@/assets/images/section-steps-3.png';
import stepsImage4 from '@/assets/images/section-steps-4.png';

const title = 'Über uns | Messie-Hilfe';
const description = 'Diskret, respektvoll und strukturiert – erfahren Sie mehr über unsere Werte, unsere Arbeitsweise und unsere Erfahrung in der Messie-Hilfe.';
const canonicalUrl = `${SITE_URL}/ueber-uns/`;

const haltungItems = [
  {
    title: 'Keine Bewertung',
    description: [
      'Wir begegnen jeder Situation ohne Vorurteile.',
      'Was Sie erlebt haben, bleibt Ihre Geschichte - wir kümmern uns um den nächsten Schritt.',
    ],
    image: whyImage1
  },
  {
    title: 'Absolute Diskretion',
    description: [
      'Keine Fotos ohne Zustimmung.',
      'Keine Weitergabe von Informationen.',
      'Ihr Anliegen bleibt vertraulich.',
    ],
    image: whyImage2
  },
  {
    title: 'Klare Struktur',
    description: [
      'Feste Schritte, klare Absprachen und transparente Abläufe - damit Sie jederzeit wissen, was passiert.',
    ],
    image: whyImage3
  },
  {
    title: 'Respektvoll & ruhig',
    description: [
      'Unsere Teams arbeiten ruhig, professionell und mit dem nötigen Feingefühl - auch in schwierigen Situationen.',
    ],
    image: whyImage4
  }
];

const stepsItems = [
  {
    title: 'Erstkontakt',
    description: 'Sie entscheiden, wie anonym Sie bleiben möchten.',
    subDescription: '',
    image: stepsImage1
  },
  {
    title: 'Besichtigung & Einschätzung',
    description: 'Kostenlos, unverbindlich und diskret.',
    subDescription: '',
    image: stepsImage2
  },
  {
    title: 'Festpreis Angebot',
    description: 'Ein klar kalkuliertes Festpreis-Angebot - transparent und ohne Überraschungen.',
    subDescription: '',
    image: stepsImage3
  },
  {
    title: 'Durchführung',
    description: 'Ruhig, respektvoll und strukturiert - mit festen Ansprechpartnern.',
    subDescription: '',
    image: stepsImage4
  }
];
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <main>
    <TextImageHero />
    <Why
      heading="Unsere Haltung"
      subtitle="Vertrauen ist das Fundament unserer Arbeit. Das spiegeln wir durch unsere Werte, sondern vor allem durch unsere Art zu arbeiten."
      showCTA={false}
      items={haltungItems}
    />
    <Steps
      heading="So arbeiten wir bei Messie-Hilfe"
      showCTA={false}
      steps={stepsItems}
    />
    <Experience />
    <FinalCTA />
  </main>
</BaseLayout>
