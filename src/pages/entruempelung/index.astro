import startImg from '@/assets/images/section-start-entruempelung.png';

const title = 'Entrümpelung – schnell, diskret & zuverlässig';
const description = 'Professionelle Entrümpelung – schnell, diskret und zuverlässig. Wir entrümpeln Wohnungen, Häuser, Keller und Gewerbeflächen. Jetzt unverbindlich anfragen.';
const canonicalUrl = `${SITE_URL}/entruempelung/`;

const heroProps = {
  title: 'Entrümpelung – schnell, diskret & zuverlässig',
  description: [
    'Eine Entrümpelung schafft Platz, Ordnung und Klarheit – ob Wohnung, Haus, Keller oder Gewerbefläche.',
    'Wir übernehmen die professionelle Entrümpelung zuverlässig, strukturiert und mit transparentem Festpreis.'
  ],
  usps: [
    'Schnelle & zuverlässige Durchführung',
    'Transparenter Festpreis',
    'Diskret & professionell vor Ort',
    'Kostenlose Vor-Ort-Besichtigung'
  ]
};

const startProps = {
  heading: 'So unterstützen wir bei einer Entrümpelung',
  subtitle: 'Eine Entrümpelung ist oft mehr als nur „Aufräumen". Ob Haushaltsauflösung, Wohnungswechsel oder Platzmangel – wir sorgen für einen klaren, strukturierten Ablauf und übernehmen die Arbeit zuverlässig für Sie.',
  bulletPoints: [
    '<strong>Zuverlässig</strong> & termingerecht',
    '<strong>Strukturiert</strong> & effizient',
    '<strong>Rücksichtsvoll</strong> & professionell',
    'Ziel: freie, <strong>nutzbare Räume</strong>'
  ],
  closingText: 'Wir passen den Ablauf individuell an Ihre Situation an – vom einzelnen Raum bis zur vollständigen Immobilie. Ohne unnötigen Aufwand, ohne Überraschungen.',
  image: startImg
};

const stepsData = [
  {
    title: 'Unverbindlich anfragen',
    description: 'Schildern Sie uns Ihr Anliegen telefonisch, per E-Mail oder über das Online-Formular.',
    subDescription: 'Die Anfrage ist unverbindlich. Wir klären erste Fragen und besprechen das weitere Vorgehen in Ruhe.',
    image: stepsImg1,
  },
  {
    title: 'Kostenlose Besichtigung vor Ort',
    description: 'Wir verschaffen uns vor Ort einen Überblick über Umfang, Aufwand und Besonderheiten.',
    subDescription: 'Die Besichtigung dient ausschließlich der realistischen Einschätzung – ohne Verpflichtung.',
    image: stepsImg2,
  },
  {
    title: 'Transparenter Gesamtpreis',
    description: 'Sie erhalten ein verbindliches Festpreis-Angebot für die Entrümpelung.',
    subDescription: 'Alle vereinbarten Leistungen sind enthalten – klar, transparent und ohne versteckte Kosten.',
    image: stepsImg3,
  },
  {
    title: 'Fachgerechte Entrümpelung',
    description: 'Zum vereinbarten Termin führen unsere Teams die Entrümpelung professionell durch.',
    subDescription: 'Zügig, strukturiert und zuverlässig – mit dem Ziel, Räume vollständig freizugeben.',
    image: stepsImg4,
  },
];

const stepsProps = {
  heading: 'So läuft eine Entrümpelung bei uns ab',
  subtitle: 'In vier klaren Schritten sorgen wir für eine schnelle, saubere und planbare Entrümpelung.',
  ctaText: 'Unverbindlich anfragen – wir erklären Ihnen den Ablauf',
  steps: stepsData
};

const includedProps = {
  heading: 'Was ist bei einer Entrümpelung enthalten – und was nicht',
  subtitle: 'Klare Abgrenzung von Anfang an – damit es später keine <strong>Missverständnisse</strong> gibt.',
  includedTitle: 'In der Entrümpelung enthalten',
  includedItems: [
    '<strong>Entrümpelung</strong> von Wohnungen, Häusern, Kellern & Garagen',
    '<strong>Sortierung</strong> und Räumung vereinbarter Bereiche',
    '<strong>Abtransport</strong> des Inhalts',
    '<strong>Fachgerechte Entsorgung</strong> nach Absprache',
    '<strong>Fester Ablauf</strong> & transparenter Festpreis',
    '<strong>Individuelle</strong> Anpassung an den Umfang'
  ],
  includedFooter: 'Gern klären wir vorab, welche Leistungen in Ihrem Fall sinnvoll und notwendig sind.',
  notIncludedTitle: 'Nicht enthalten',
  notIncludedTitleSuffix: 'bzw. separat buchbar',
  notIncludedItems: [
    '<strong>Renovierungs-</strong> oder <strong>Handwerksarbeiten</strong>',
    '<strong>Reinigungs-</strong> oder <strong>Desinfektionsleistungen</strong>',
    '<strong>Entsorgung von Sondermüll</strong> ohne vorherige Absprache',
    'Arbeiten außerhalb des vereinbarten Leistungsumfangs'
  ],
  notIncludedFooter: 'Leistungen außerhalb dieses Rahmens stimmen wir transparent mit Ihnen ab.',
  ctaText: 'Klären Sie vorab, welche Leistungen für Sie sinnvoll sind'
