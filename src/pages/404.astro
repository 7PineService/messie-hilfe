---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_URL } from '../config/site';
import '../styles/global.css';
---

<BaseLayout
	title="404 – Seite nicht gefunden | Messie-Hilfe"
	description="Die gesuchte Seite konnte nicht gefunden werden. Zurück zur Startseite oder kontaktieren Sie uns direkt."
	canonicalUrl={`${SITE_URL}/404`}
	noindex={true}
>
	<Header slot="header" />

	<main class="bg-[var(--color-bg-light)] min-h-[calc(100vh-200px)] flex items-center py-12 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-2xl mx-auto text-center">
				<!-- 404 Number - Large and prominent -->
				<div class="mb-6 md:mb-8">
					<h1 class="text-8xl md:text-9xl font-bold text-[var(--color-heading)] opacity-20 leading-none">
						404
					</h1>
				</div>

				<!-- Main Message -->
				<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[var(--color-heading)] mb-4 md:mb-6">
					Seite nicht gefunden
				</h2>
				
				<p class="text-lg md:text-xl text-[var(--color-heading)] opacity-80 mb-8 md:mb-12 leading-relaxed">
					Entschuldigung, die gesuchte Seite existiert nicht oder wurde verschoben. 
					Wir helfen Ihnen gerne weiter – finden Sie schnell zurück zur Startseite oder kontaktieren Sie uns direkt.
				</p>

				<!-- Action Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
					<!-- Primary CTA: Back to Home -->
					<a 
						href="/" 
						class="inline-flex items-center space-x-2 bg-[var(--color-button)] border border-[var(--color-button-border)] hover:opacity-90 text-[var(--color-heading)] font-semibold px-8 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 text-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
						</svg>
						<span>Zur Startseite</span>
					</a>

					<!-- Secondary CTA: Contact -->
					<a 
						href="/anfrage/" 
						class="inline-flex items-center space-x-2 bg-transparent border-2 border-[var(--color-heading)] hover:bg-[var(--color-heading)] hover:text-white text-[var(--color-heading)] font-semibold px-8 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 text-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
						</svg>
						<span>Kontakt aufnehmen</span>
					</a>
				</div>

				<!-- Helpful Links -->
				<div class="border-t border-amber-200 pt-8 md:pt-12">
					<p class="text-sm md:text-base text-[var(--color-heading)] opacity-70 mb-6">
						Häufig gesuchte Seiten:
					</p>
					<div class="flex flex-wrap justify-center gap-4 md:gap-6">
						<a href="/anfrage/" class="text-[var(--color-heading)] hover:opacity-80 transition-colors font-medium underline decoration-2 underline-offset-4">
							Angebot anfordern
						</a>
						<span class="text-[var(--color-heading)] opacity-30">•</span>
						<a href="/standorte" class="text-[var(--color-heading)] hover:opacity-80 transition-colors font-medium underline decoration-2 underline-offset-4">
							Standorte
						</a>
						<span class="text-[var(--color-heading)] opacity-30">•</span>
						<a href="/ueber-uns" class="text-[var(--color-heading)] hover:opacity-80 transition-colors font-medium underline decoration-2 underline-offset-4">
							Über uns
						</a>
						<span class="text-[var(--color-heading)] opacity-30">•</span>
						<a href="/kontakt" class="text-[var(--color-heading)] hover:opacity-80 transition-colors font-medium underline decoration-2 underline-offset-4">
							Kontakt
						</a>
					</div>
				</div>

				<!-- Decorative Icon -->
				<div class="mt-12 md:mt-16 flex justify-center">
					<div class="w-24 h-24 bg-[var(--color-button)] rounded-full flex items-center justify-center shadow-md opacity-60">
						<svg class="w-12 h-12 text-[var(--color-heading)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
				</div>
			</div>
		</div>
	</main>

	<Footer slot="footer" />
</BaseLayout>


