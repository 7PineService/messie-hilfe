---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  title: string
  description: string
  image: ImageMetadata
  link?: string
}
const { title, description, image, link = '#' } = Astro.props
---

<a href={link} class="sub-card-link block h-full">
  <div class="sub-service-card flex items-center p-0 shadow-xl overflow-hidden rounded-2xl bg-surface-secondary h-full">
    <div class="w-[30%] shrink-0">
      <Image class="w-full h-full object-contain" src={image} alt={title} loading="eager" decoding="async" />
    </div>
    <div class="flex-1 flex flex-col gap-2 py-4 pr-2">
      <div
        class="text-xs md:text-sm lg:text-base xl:text-base 2xl:text-base font-semibold leading-tight tracking-[-1px] sm:tracking-normal drop-shadow-[2px_8px_12px_rgba(170,71,14,0.3)]"
      >
        {title}
      </div>
      <div
        class="text-[10px] md:text-xs lg:text-sm xl:text-sm opacity-80 leading-relaxed drop-shadow-[2px_8px_12px_rgba(170,71,14,0.3)]"
      >
        {description}
      </div>
    </div>
  </div>
</a>

<style>
  .sub-card-link {
    text-decoration: none;
    color: inherit;
  }

  .sub-service-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .sub-card-link:hover .sub-service-card {
    transform: translateY(-4px);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
    background-color: var(--color-surface-warm-peach) !important;
  }

  @media (max-width: 768px) {
    .sub-card-link:hover .sub-service-card {
      transform: translateY(-2px);
    }
  }
</style>
