---
import BaseLayout from '@/layouts/base-layout.astro';
---

<BaseLayout
	title="Brand Guide – Messie-Hilfe"
	description="Brand guidelines and design system for Messie-Hilfe"
	noindex={true}
>
	<main class="py-12 md:py-20">
		<div class="container mx-auto px-4 max-w-6xl">
			<!-- Header -->
			<div class="text-center mb-16">
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">Brand Guide</h1>
				<p class="text-lg md:text-xl opacity-80 max-w-3xl mx-auto">
					Design system and brand guidelines for Messie-Hilfe
				</p>
			</div>

			<!-- Logo Text Variations Section -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8">Logo Text Variations</h2>
				<div class="bg-white rounded-xl shadow-lg p-8">
					<p class="mb-6 opacity-70">Testing different visual styles for the logo text on header background. "Messie-" is always semibold/bold, "Hilfe" is always regular weight.</p>

					<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
						<!-- Variant 1 - No shine, neutral & calm -->
						<div class="bg-surface-secondary rounded-xl p-8">
							<p class="text-sm font-semibold mb-4 opacity-70">Variant 1 – No shine, neutral & calm</p>
							<div class="text-4xl md:text-5xl mb-4">
								<span class="font-semibold" style="color: #463324;">Messie-</span><span class="font-normal" style="color: #463324;">Hilfe</span>
							</div>
							<div class="text-sm opacity-60 space-y-1">
								<p>"Messie-" → #463324, semibold</p>
								<p>"Hilfe" → #463324, regular</p>
							</div>
						</div>

						<!-- Variant 2 - No shine, slightly softer -->
						<div class="bg-surface-secondary rounded-xl p-8">
							<p class="text-sm font-semibold mb-4 opacity-70">Variant 2 – No shine, slightly softer</p>
							<div class="text-4xl md:text-5xl mb-4">
								<span class="font-semibold" style="color: #463324;">Messie-</span><span class="font-normal" style="color: #8B7A6A;">Hilfe</span>
							</div>
							<div class="text-sm opacity-60 space-y-1">
								<p>"Messie-" → #463324, semibold</p>
								<p>"Hilfe" → #8B7A6A, regular</p>
							</div>
						</div>

						<!-- Variant 3 - No shine, light & airy -->
						<div class="bg-surface-secondary rounded-xl p-8">
							<p class="text-sm font-semibold mb-4 opacity-70">Variant 3 – No shine, light & airy</p>
							<div class="text-4xl md:text-5xl mb-4">
								<span class="font-semibold" style="color: #463324;">Messie-</span><span class="font-normal" style="color: #E8DACC;">Hilfe</span>
							</div>
							<div class="text-sm opacity-60 space-y-1">
								<p>"Messie-" → #463324, semibold</p>
								<p>"Hilfe" → #E8DACC, regular</p>
							</div>
						</div>

						<!-- Variant 4 - Warm light glow -->
						<div class="bg-surface-secondary rounded-xl p-8">
							<p class="text-sm font-semibold mb-4 opacity-70">Variant 4 – Warm light glow</p>
							<div class="text-4xl md:text-5xl mb-4">
								<span class="font-semibold" style="color: #463324;">Messie-</span><span class="font-normal logo-glow-v4" style="color: #ffffff;">Hilfe</span>
							</div>
							<div class="text-sm opacity-60 space-y-1">
								<p>"Messie-" → #463324, semibold</p>
								<p>"Hilfe" → #ffffff, regular + layered glow</p>
								<p class="text-xs">Inner: Warm yellow glow for visibility</p>
								<p class="text-xs">Outer: Soft beige (#d4baa5) for harmony</p>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Colors Section -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8">Color Palette</h2>

				<!-- Surface Colors -->
				<div class="mb-12">
					<h3 class="text-2xl font-semibold mb-6">Surface Colors</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
						<!-- Primary Surface -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 bg-surface-primary"></div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Primary Surface</h4>
								<p class="text-sm opacity-70 mb-2">Lightest warm beige for main backgrounds</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#FCF4F0</code>
							</div>
						</div>

						<!-- Secondary Surface -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 bg-surface-secondary"></div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Secondary Surface</h4>
								<p class="text-sm opacity-70 mb-2">Medium warm beige for secondary backgrounds</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#F9EDE4</code>
							</div>
						</div>

						<!-- Tertiary Surface -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 bg-surface-tertiary"></div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Tertiary Surface</h4>
								<p class="text-sm opacity-70 mb-2">Peachy beige for tertiary backgrounds</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#F7EBE4</code>
							</div>
						</div>

						<!-- Muted Surface -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 bg-surface-muted"></div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Muted Surface</h4>
								<p class="text-sm opacity-70 mb-2">Subtle warm background</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#FBF4F0</code>
							</div>
						</div>

						<!-- Input Surface -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 bg-surface-input"></div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Input Surface</h4>
								<p class="text-sm opacity-70 mb-2">Form input backgrounds</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#F2E7DF</code>
							</div>
						</div>
					</div>
				</div>

				<!-- Text Colors -->
				<div class="mb-12">
					<h3 class="text-2xl font-semibold mb-6">Text Colors</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<!-- Primary Text -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center" style="background-color: #4a3221;">
								<span class="text-white text-2xl font-bold">Aa</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Primary Text</h4>
								<p class="text-sm opacity-70 mb-2">Dark brown for main content</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#4A3221</code>
							</div>
						</div>

						<!-- Muted Text -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center" style="background-color: #a39186;">
								<span class="text-white text-2xl font-bold">Aa</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Muted Text</h4>
								<p class="text-sm opacity-70 mb-2">Lighter brown for secondary text</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#A39186</code>
							</div>
						</div>
					</div>
				</div>

				<!-- Interactive Colors -->
				<div class="mb-12">
					<h3 class="text-2xl font-semibold mb-6">Interactive Colors (CTAs)</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<!-- Primary CTA -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center" style="background-color: #C49F70;">
								<span class="text-white text-lg font-semibold">Primary CTA</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Primary CTA</h4>
								<p class="text-sm opacity-70 mb-2">Bronze button (Main actions)</p>
								<div class="space-y-1">
									<div><code class="text-sm bg-gray-100 px-2 py-1 rounded">#C49F70</code> <span class="text-xs opacity-60">Default</span></div>
									<div><code class="text-sm bg-gray-100 px-2 py-1 rounded">#B38F60</code> <span class="text-xs opacity-60">Hover</span></div>
								</div>
							</div>
						</div>

						<!-- Secondary CTA -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center" style="background-color: #F4E4D3;">
								<span class="text-primary text-lg font-semibold">Secondary CTA</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Secondary CTA</h4>
								<p class="text-sm opacity-70 mb-2">Light beige button (Secondary actions)</p>
								<div class="space-y-1">
									<div><code class="text-sm bg-gray-100 px-2 py-1 rounded">#F4E4D3</code> <span class="text-xs opacity-60">Default</span></div>
									<div><code class="text-sm bg-gray-100 px-2 py-1 rounded">#E9D4C3</code> <span class="text-xs opacity-60">Hover</span></div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Border Colors -->
				<div>
					<h3 class="text-2xl font-semibold mb-6">Border Colors</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<!-- Primary Border -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center bg-white border-8" style="border-color: #d4baa5;">
								<span class="text-primary text-lg font-semibold">Border</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Primary Border</h4>
								<p class="text-sm opacity-70 mb-2">Main border color for inputs and containers</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#D4BAA5</code>
							</div>
						</div>

						<!-- Secondary Border -->
						<div class="bg-white rounded-xl shadow-lg overflow-hidden">
							<div class="h-32 flex items-center justify-center bg-white border-8" style="border-color: #c1a9a1;">
								<span class="text-primary text-lg font-semibold">Border</span>
							</div>
							<div class="p-4">
								<h4 class="font-semibold mb-2">Secondary Border</h4>
								<p class="text-sm opacity-70 mb-2">Muted brown for buttons and CTAs</p>
								<code class="text-sm bg-gray-100 px-2 py-1 rounded">#C1A9A1</code>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Typography Section -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8">Typography</h2>

				<div class="bg-white rounded-xl shadow-lg p-8 mb-8">
					<h3 class="text-2xl font-semibold mb-6">Font Family</h3>
					<div class="mb-4">
						<p class="text-4xl font-bold mb-2">Noto Sans</p>
						<p class="text-lg opacity-70">Primary font for all text</p>
					</div>
					<div class="mt-6 space-y-2">
						<p class="font-normal">Regular (400) - Body text and general content</p>
						<p class="font-semibold">Semibold (600) - Subheadings and emphasis</p>
						<p class="font-bold">Bold (700) - Headings and strong emphasis</p>
					</div>
				</div>

				<div class="bg-white rounded-xl shadow-lg p-8">
					<h3 class="text-2xl font-semibold mb-6">Type Scale</h3>
					<div class="space-y-6">
						<div>
							<p class="text-xs opacity-60 mb-1">H1</p>
							<h1 class="text-5xl font-bold">Heading 1</h1>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">H2</p>
							<h2 class="text-4xl font-bold">Heading 2</h2>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">H3</p>
							<h3 class="text-3xl font-semibold">Heading 3</h3>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">H4</p>
							<h4 class="text-2xl font-semibold">Heading 4</h4>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">Body Large</p>
							<p class="text-lg">Large body text for introductions and emphasis</p>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">Body</p>
							<p class="text-base">Regular body text for main content</p>
						</div>
						<div>
							<p class="text-xs opacity-60 mb-1">Small</p>
							<p class="text-sm">Small text for captions and labels</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Components Section -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8">Components</h2>

				<!-- Buttons -->
				<div class="bg-white rounded-xl shadow-lg p-8 mb-8">
					<h3 class="text-2xl font-semibold mb-6">Buttons</h3>
					<div class="space-y-6">
						<div>
							<p class="text-sm font-semibold mb-3">Primary CTA</p>
							<button class="cta-primary px-6 py-3 rounded-lg text-white font-semibold">
								Anonym anfragen
							</button>
						</div>
						<div>
							<p class="text-sm font-semibold mb-3">Secondary CTA</p>
							<button class="cta-secondary px-6 py-3 rounded-lg text-primary font-semibold border border-cta-border">
								Kostenloses Angebot anfordern
							</button>
						</div>
					</div>
				</div>

				<!-- Form Inputs -->
				<div class="bg-white rounded-xl shadow-lg p-8 mb-8">
					<h3 class="text-2xl font-semibold mb-6">Form Inputs</h3>
					<div class="space-y-6">
						<div>
							<p class="text-sm font-semibold mb-3">Text Input</p>
							<input
								type="text"
								placeholder="Ihr Name"
								class="w-full px-4 py-3 rounded-lg bg-surface-input border border-border-primary focus:border-primary focus:ring-2 focus:ring-primary/20"
							/>
						</div>
						<div>
							<p class="text-sm font-semibold mb-3">Textarea</p>
							<textarea
								placeholder="Ihre Nachricht"
								rows="4"
								class="w-full px-4 py-3 rounded-lg bg-surface-input border border-border-primary focus:border-primary focus:ring-2 focus:ring-primary/20"
							></textarea>
						</div>
					</div>
				</div>

				<!-- Cards -->
				<div class="bg-white rounded-xl shadow-lg p-8">
					<h3 class="text-2xl font-semibold mb-6">Cards</h3>
					<div>
						<p class="text-sm font-semibold mb-3">Basic Card</p>
						<div class="bg-white rounded-2xl shadow-xl p-6 max-w-md">
							<h4 class="text-xl font-bold mb-2">Card Title</h4>
							<p class="opacity-70">This is a card component with shadow and rounded corners.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Spacing Section -->
			<section class="mb-16">
				<h2 class="text-3xl font-bold mb-8">Spacing</h2>
				<div class="bg-white rounded-xl shadow-lg p-8">
					<p class="mb-6 opacity-70">Consistent spacing using Tailwind's spacing scale</p>
					<div class="space-y-4">
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">2 (8px)</div>
							<div class="h-8 bg-primary" style="width: 8px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">3 (12px)</div>
							<div class="h-8 bg-primary" style="width: 12px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">4 (16px)</div>
							<div class="h-8 bg-primary" style="width: 16px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">6 (24px)</div>
							<div class="h-8 bg-primary" style="width: 24px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">8 (32px)</div>
							<div class="h-8 bg-primary" style="width: 32px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">12 (48px)</div>
							<div class="h-8 bg-primary" style="width: 48px;"></div>
						</div>
						<div class="flex items-center gap-4">
							<div class="w-24 text-sm font-semibold">16 (64px)</div>
							<div class="h-8 bg-primary" style="width: 64px;"></div>
						</div>
					</div>
				</div>
			</section>

			<!-- Border Radius Section -->
			<section>
				<h2 class="text-3xl font-bold mb-8">Border Radius</h2>
				<div class="bg-white rounded-xl shadow-lg p-8">
					<p class="mb-6 opacity-70">Rounded corners for components</p>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
						<div>
							<div class="bg-primary h-24 rounded-lg mb-2"></div>
							<p class="text-sm font-semibold">rounded-lg (8px)</p>
							<p class="text-xs opacity-60">Buttons, Inputs</p>
						</div>
						<div>
							<div class="bg-primary h-24 rounded-xl mb-2"></div>
							<p class="text-sm font-semibold">rounded-xl (12px)</p>
							<p class="text-xs opacity-60">Floating icons</p>
						</div>
						<div>
							<div class="bg-primary h-24 rounded-2xl mb-2"></div>
							<p class="text-sm font-semibold">rounded-2xl (16px)</p>
							<p class="text-xs opacity-60">Cards, Containers</p>
						</div>
					</div>
				</div>
			</section>
		</div>
	</main>
</BaseLayout>

<style>
	.logo-glow-v4 {
		text-shadow:
			0 0 5px rgba(255, 235, 59, 0.9),
			0 0 10px rgba(255, 223, 0, 0.8),
			0 0 15px rgba(255, 215, 0, 0.6),
			0 0 25px rgba(212, 186, 165, 0.7),
			0 0 35px rgba(212, 186, 165, 0.5),
			0 0 45px rgba(212, 186, 165, 0.4);
	}
</style>
