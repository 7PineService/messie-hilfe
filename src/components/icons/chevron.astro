---
import { cn } from '@/utils/cn';

interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  direction?: 'up' | 'down' | 'left' | 'right';
  class?: string;
  'aria-label'?: string;
  'aria-hidden'?: boolean;
}

const {
  size = 'md',
  direction = 'down',
  class: className = '',
  'aria-label': ariaLabel,
  'aria-hidden': ariaHidden = true
} = Astro.props;

const sizeClasses = {
  xs: 'w-4 h-4',
  sm: 'w-5 h-5',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-10 h-10'
};

const rotationClasses = {
  up: 'rotate-180',
  down: '',
  left: '-rotate-90',
  right: 'rotate-90'
};
---

<svg
  class={cn(sizeClasses[size], rotationClasses[direction], className)}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-label={ariaLabel}
  aria-hidden={ariaHidden}
  role={ariaLabel ? 'img' : undefined}
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M19 9l-7 7-7-7"
  />
</svg>
