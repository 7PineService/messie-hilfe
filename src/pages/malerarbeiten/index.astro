  notIncludedTitleSuffix: 'bzw. separat buchbar',
  notIncludedItems: [
    'Umfangreiche <strong>Untergrundsanierung</strong>',
    '<strong>Tapezierarbeiten</strong> (sofern nicht vereinbart)',
