---
import BaseLayout from '@/layouts/base-layout.astro';
import Hero from '@/components/sections/hero.astro';
import Start from '@/components/sections/start.astro';
import Steps from '@/components/sections/steps.astro';
import Included from '@/components/sections/included.astro';
import Transparency from '@/components/sections/transparency.astro';
import FAQ from '@/components/sections/faqs.astro';
import { FinalCTA } from '@/components/sections';
import AnonymFormOverlay from '@/components/anonym-form-overlay.astro';
import FloatingActionIcons from '@/components/floating-action-icons.astro';
import { SITE_URL } from '@/config/site';
import stepsImg1 from '@/assets/images/section-steps-1.png';
import stepsImg2 from '@/assets/images/section-steps-2.png';
import stepsImg3 from '@/assets/images/section-steps-3.png';
import stepsImg4 from '@/assets/images/section-steps-4.png';
import faqImg1 from '@/assets/images/section-faq-1.png';
import faqImg2 from '@/assets/images/section-faq-2.png';
