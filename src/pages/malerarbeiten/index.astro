const faqData = [
  {
    title: 'Welche Räume können gestrichen werden?',
    description: 'Wir übernehmen Malerarbeiten in Wohnungen, Häusern und Gewerbeflächen – nach vorheriger Absprache.',
    image: faqImg1,
  },
  {
    title: 'Muss ich während der Malerarbeiten anwesend sein?',
    description: 'Nein. Auf Wunsch führen wir die Arbeiten selbstständig durch.',
