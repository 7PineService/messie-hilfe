---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { Card } from '@/components/ui'

interface Props {
  title: string
  description: string
  image: ImageMetadata
}
const { title, description, image } = Astro.props
---

<Card class="flex items-center p-0 shadow-xl overflow-hidden">
  <div class="w-[30%] shrink-0">
    <Image class="w-full h-full object-contain" src={image} alt={title} loading="eager" />
  </div>
  <div class="flex-1 flex flex-col gap-2 py-4 pr-2">
    <div
      class="text-xs md:text-sm lg:text-base xl:text-base 2xl:text-base font-semibold leading-tight tracking-[-1px] sm:tracking-normal drop-shadow-[2px_8px_12px_rgba(170,71,14,0.3)]"
    >
      {title}
    </div>
    <div
      class="text-[10px] md:text-xs lg:text-sm xl:text-sm opacity-80 leading-relaxed drop-shadow-[2px_8px_12px_rgba(170,71,14,0.3)]"
    >
      {description}
    </div>
  </div>
</Card>
