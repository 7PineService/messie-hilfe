const faqProps = {
  heading: 'Häufige Fragen zu Malerarbeiten',
  subtitle: 'Hier finden Sie Antworten auf häufige Fragen rund um professionelle Malerarbeiten.',
  faqItems: faqData,
  ctaText: 'Ihre Frage ist noch offen?'
