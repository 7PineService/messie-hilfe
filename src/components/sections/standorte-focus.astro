---
import { Image } from 'astro:assets';
import berlinImg from '@/assets/images/section-standorte-berlin.png';
import muenchenImg from '@/assets/images/section-standorte-muenchen.png';
import hamburgImg from '@/assets/images/section-standorte-hamburg.png';
import koelnImg from '@/assets/images/section-standorte-koeln.png';
import frankfurtImg from '@/assets/images/section-standorte-frankfurt.png';
import duesseldorfImg from '@/assets/images/section-standorte-duesseldorf.png';
import essenImg from '@/assets/images/section-standorte-essen.png';

const cities = [
  { name: 'Berlin', image: berlinImg },
  { name: 'München', image: muenchenImg },
  { name: 'Hamburg', image: hamburgImg },
  { name: 'Köln', image: koelnImg },
  { name: 'Frankfurt', image: frankfurtImg },
  { name: 'Düsseldorf', image: duesseldorfImg },
  { name: 'Essen', image: essenImg },
];
---

<section class="section-bg py-8 md:py-10 lg:py-12">
  <div class="container mx-auto px-4">
    <!-- Section heading -->
    <div class="max-w-3xl mx-auto text-center mb-8 md:mb-10 lg:mb-12">
      <h2 class="text-xl md:text-3xl lg:text-3xl xl:text-4xl 2xl:text-5xl min-[1920px]:text-6xl font-bold text-primary leading-tight mb-4">
        Unsere Schwerpunkte
      </h2>
      <p class="text-sm md:text-base lg:text-base xl:text-lg 2xl:text-xl min-[1920px]:text-2xl text-primary opacity-80 leading-relaxed">
        An den folgenden Standorten sind wir regelmäßig im Einsatz.
      </p>
    </div>

    <!-- 3-column grid -->
    <div class="cities-grid">
      {cities.map((city) => (
        <div class="city-card">
          <div class="city-card-inner">
            <div class="flex justify-center mb-3">
              <Image
                src={city.image}
                alt={city.name}
                class="city-icon"
              />
            </div>
            <h3 class="city-name">
              {city.name}
            </h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section-bg {
    background:
      url('/images/background.webp') center / cover no-repeat,
      var(--color-surface-primary);
  }

  .cities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 56rem;
    margin: 0 auto;
    justify-items: center;
  }

  @media (min-width: 768px) {
    .cities-grid {
      gap: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .cities-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }

    /* Center the last item (7th) when it's alone in the row */
    .city-card:nth-child(7) {
      grid-column: 2 / 3;
    }
  }

  .city-card {
    width: 100%;
    max-width: 18.75rem;
  }

  .city-card-inner {
    background: var(--color-surface-light-peach);
    border: 1px solid rgba(212, 186, 165, 0.2);
    border-radius: 0.75rem;
    padding: 1.25rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
    height: 100%;
    min-height: 13rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .city-card-inner {
      min-height: 12.5rem;
      max-height: 13.5rem;
      padding: 1rem 0.75rem;
    }
  }

  .city-card-inner:hover {
    background: var(--color-surface-warm-peach);
    border-color: rgba(212, 186, 165, 0.4);
    transform: translateY(-2px);
  }

  .city-icon {
    width: 5rem;
    height: 5rem;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .city-icon {
      width: 5.5rem;
      height: 5.5rem;
    }
  }

  @media (min-width: 1024px) {
    .city-icon {
      width: 5.5rem;
      height: 5.5rem;
    }
  }

  .city-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.4;
  }

  @media (min-width: 768px) {
    .city-name {
      font-size: 1rem;
    }
  }

  @media (min-width: 1024px) {
    .city-name {
      font-size: 1.0625rem;
    }
  }
</style>
