---
import BaseLayout from '@/layouts/base-layout.astro';
import ContactHero from '@/components/sections/contact-hero.astro';
import ContactInfo from '@/components/sections/contact-info.astro';
import ContactTrust from '@/components/sections/contact-trust.astro';
import ContactForm from '@/components/contact-form.astro';
import { SITE_URL } from '@/config/site';

const title = 'Kontakt aufnehmen â€“ diskret & unverbindlich';
const description = 'Nehmen Sie diskret und unverbindlich Kontakt mit uns auf. Wir behandeln Ihr Anliegen vertraulich und melden uns diskret bei Ihnen.';
const canonicalUrl = `${SITE_URL}/kontakt/`;
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <main>
    <!-- Single-column centered hero -->
    <ContactHero />

    <!-- Contact section: Info + Form + Trust Points -->
    <section class="pt-4 pb-8 md:py-10 lg:py-12 bg-surface-primary">
      <div class="container mx-auto px-4">
        <!-- Contact Info + Form Grid -->
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 max-w-6xl mx-auto mb-8 lg:mb-12">
          <ContactInfo />
          <ContactForm
            formId="kontakt-form"
            showTitle={false}
            submitButtonText="Nachricht senden"
            formType="contact"
            formLocation="kontakt"
          />
        </div>

        <!-- Trust Points below the grid -->
        <div class="max-w-4xl mx-auto">
          <ContactTrust />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
